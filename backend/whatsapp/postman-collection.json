      }
    },
    {
      "name": "Send Media",
      "request": {
        "method": "POST",
        "header": [],
        "body": { "mode": "formdata", "formdata": [
          { "key": "to", "value": "recipient_number_or_name", "type": "text" },
          { "key": "file", "type": "file" },
          { "key": "caption", "value": "optional caption", "type": "text" }
        ] },
        "url": { "raw": "{{baseUrl}}/media/send", "host": ["{{baseUrl}}"], "path": ["media", "send"] }
